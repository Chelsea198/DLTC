<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.PostBaiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btnDangBai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Image"
            android:textAllCaps="false" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgHinh1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/add_image2"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/imgHinh2"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:src="@drawable/add_image"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/imgHinh3"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:src="@drawable/add_image"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/imgHinh4"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:src="@drawable/add_image"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/imgHinh5"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:src="@drawable/add_image"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/imgHinh6"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:src="@drawable/add_image"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>